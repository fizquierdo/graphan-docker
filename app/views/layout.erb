<!DOCTYPE html>
<html>
	<head>
		<meta charset='UTF-8' />
		<title>Graphan</title>
		<link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css' rel='stylesheet' />
		<link rel="stylesheet" type="text/css" href="css/style.css">
	</head>
	<body class='container-fluid'>

		<!--header -->
		<div>
			<ul class="nav nav-pills font-lg">
				<!--Navigation generic -->
				<li><a href="/"					>Home</a></li>
				<li><a href="/backbone"	>Chars</a></li>
				<li><a href="/words"	  >Words</a></li>
				<li><a href="/texts"	  >Texts</a></li>
				<li><a href="/tonelist"	>Tones</a></li>

				<!--Navigation signin-out-up -->
				<% if session[:user] %>
					<form class="form-inline pull-right font-md" action="signout" method="GET">
						Logged in as <%= session[:user] %>
						<input type="submit" class="btn btn-link btn-lg" value="sign out">
					</form>
				<% else %>
					<li class="pull-right"><a href="/signin" >Sign in</a></li>
					<li class="pull-right"><a href="/signup" >Sign up</a></li>
				<% end %>

			</ul>
		</div>
		<!--End of header -->

		<!--notification -->
		<% if flash[:notice] %>
			<div class="alert alert-info font-md">
					<p><%= flash[:notice] %></p>
			</div>
		 <% end %>
		<!--End of notification -->

		<%= yield %>

		<!--Additional javascript -->
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
		<!--End of additional javascript -->

	</body>
</html>
