<% #encoding: UTF-8	%>

<!-- Complete table of all available texts -->

<table class='table font-md table-responsive'>
	<thead>
		<tr>
			<th>Title</th>
			<th>Source</th>
			<th>Text</th>
			<% if @edit_view %>
				<th>Delete</th>
			<% end %>
		</tr>
	</thead>

	<% @texts.each do |t| %>
		<tbody>
			<tr>
				<td><%= t[:title] %></td>
				<td><a target="_blank" href=<%= t[:source] %>>Source</a></td>
				<td>
					<form action="annotated_text" method="GET">
						<input type="hidden" name="text_title" value="<%= t[:title] %>">
						<input type="submit" class="btn btn-lg btn-default" value="See Text">
					</form>
				</td>
				<% if @edit_view %>
					<td>
						<form action="delete_text" method="POST">
							<input type="hidden" name="text_title" value="<%= t[:title] %>">
							<input type="submit" class="btn btn-lg btn-danger" value="Delete">
						</form>
					</td>
				<% end %>
			</tr>
		</tbody>
	<% end %>

</table>

<!-- if user is admin should see link to edit -->
<% if @edit_view %>
	<hr>
	<a href="/add_text" >Add new text</a>
<% end %>
